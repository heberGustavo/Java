<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/activitys_background"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculo de juros"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_margin="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valor"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vencimento"
                android:textSize="20dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pagamento"
                android:textSize="20dp"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5">

            <EditText
                android:id="@+id/valor_main"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/vencimento_main"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/pagamento_main"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Juros"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_margin="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_margin="8dp">

        <EditText
            android:id="@+id/juros_textView_main"
            android:layout_width="180dp"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/grupo_juros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <RadioButton
                android:id="@+id/dinheiro_juros_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$"/>

            <RadioButton
                android:id="@+id/porcentagem_juros_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"/>


        </RadioGroup>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multa"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_margin="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_margin="8dp">

        <EditText
            android:id="@+id/multa_textView_main"
            android:layout_width="180dp"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/grupo_multa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <RadioButton
                android:id="@+id/dinheiro_multa_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$"/>

            <RadioButton
                android:id="@+id/porcentagem_multa_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"/>

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70sp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp">

        <Button
            android:id="@+id/limpar_button_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Limpar"/>

        <Button
            android:id="@+id/calcular_button_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Calcular"/>
    </LinearLayout>


</LinearLayout>